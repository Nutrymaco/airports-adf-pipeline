								"type": "Expression"
							},
							"month": {
								"value": "@variables('month')",
								"type": "Expression"
							},
							"year": {
								"value": "@variables('year')",
								"type": "Expression"
							},
							"fileName": "ticket_flights_by_part_of_day"
						}
					}
				]
			},
			{
				"name": "copy airports",
				"type": "Copy",
